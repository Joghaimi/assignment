
@{
    ViewData["Title"] = "Create";
}
@model assignment.Models.Employees
<form method="post" enctype="multipart/form-data" asp-action="CreateEmployees">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Employees</h2>
        </div>
         <br />
           <div class="form-group row">
                    <div class="col-8">
                        <input type="file" name="fileUpdate" data-max-file-size="3MB" data-max-files="1" accept=".txt" >
                    </div>
                </div>
         <br />
         <div class="form-group row">
            <div class="col-8  row">
                <div class="col">
                    <input type="submit" class="btn btn-info w-100" value="Create"/>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                </div>
            </div>
         </div>
    </div>

</form>




